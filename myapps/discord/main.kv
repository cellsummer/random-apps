MDBoxLayout:
    orientation: 'vertical'
    # md_bg_color: app.theme_cls.accent_color
    spacing: '10dp'
    padding: '10dp', '10dp', '10dp', '10dp'
    MDLabel:
        text: 'Discord'
        size_hint: (1, 0.1)
        halign: 'center'
        font_style: 'H3'
        theme_text_color: 'Primary'
    AsyncImage:
        size_hint: (1, 0.5)
        source: 'https://img9.doubanio.com//view//photo//s_ratio_poster//public//p616779645.jpg'
        allow_stretch: True
        keep_ratio: False
    MDLabel:
        text: 'Welcome to Discord'
        size_hint: (1, 0.1)
        halign: 'center'
        font_style: 'H4'
        theme_text_color: 'Primary'
    MDLabel:
        text: 'Join over 100 million people who use Discord to talk with communities and friends.'
        size_hint: (1, 0.1)
        halign: 'center'
        theme_text_color: 'Primary'
    MDRaisedButton:
        text: 'Register'
        size_hint: (1, 0.1)
        halign: 'center'
    MDRaisedButton:
        text: 'Login'
        size_hint: (1, 0.1)
        halign: 'center'